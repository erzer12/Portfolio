rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // SECURITY: All writes are restricted to server-side only.
    // The application uses Next.js Server Actions that verify an Access Code before performing writes.
    // Public reads are allowed for the portfolio display, but direct client writes are blocked.
    
    // --- Public Content (Read-only from client) ---
    match /projects/{document} {
      allow read: if true;
      allow write: if false; // Server-side only
    }
    match /skills/{document} {
      allow read: if true;
      allow write: if false; // Server-side only
    }
    match /experience/{document} {
      allow read: if true;
      allow write: if false; // Server-side only
    }
    match /certifications/{document} {
      allow read: if true;
      allow write: if false; // Server-side only
    }
    match /profile/{document} {
      allow read: if true;
      allow write: if false; // Server-side only
    }
    match /education/{document} {
      allow read: if true;
      allow write: if false; // Server-side only
    }
    
    // --- Testimonials ---
    match /testimonials/{document} {
      allow read: if true;
      allow write: if false; // Server-side only
    }
    
    // --- Contact Messages ---
    match /messages/{document} {
      allow read: if true;
      // Only allow create operations with validation
      allow create: if request.auth == null // Allow anonymous submissions
        && request.resource.data.keys().hasAll(['name', 'email', 'message', 'timestamp'])
        && request.resource.data.name is string
        && request.resource.data.email is string
        && request.resource.data.message is string
        && request.resource.data.name.size() >= 2
        && request.resource.data.name.size() <= 100
        && request.resource.data.email.size() >= 5
        && request.resource.data.email.size() <= 255
        && request.resource.data.message.size() >= 10
        && request.resource.data.message.size() <= 5000;
      // Prevent updates and deletes from client
      allow update, delete: if false;
    }
  }
}
